{%- for inc in salt['pillar.get'](settings+':includes', []) %}
include "{{ inc }}";
{% endfor %}

{%- if salt['pillar.get'](settings+':router id', False) %}
router id {{ salt['pillar.get'](settings+':router id') }};
{% endif %}

{%- for key, val in salt['pillar.get'](settings+':filters', {}).iteritems() %}
filter {{ key }} {
{{ val|indent(2,true) }}
}
{% endfor %}

{%- for key, val in salt['pillar.get'](settings+':protocols', {}).iteritems() %}
protocol {{ key }} {
  {%- for k, v in val.items() %}
  {%- if v is mapping %}
  {{ k }} {
  {%- for i,j in v.items() %}
    {%- if j is mapping %}
    {{ i }} {
      {%- for x,y in j.items() %}
      {{ x }} {{ y }};
      {%- endfor %}
    };
    {%- else %}
    {{ i }} {{ j }};
    {%- endif %}
  {%- endfor %}
  };
  {%- else %}
  {{ k }} {{ v }};
  {%- endif %}
  {%- endfor %}
}
{% endfor %}

